{{!< default}}
{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}
{{! Everything inside the #post tags pulls data from the page }}
{{#post}}
<header class="main-header" data-anijs="if: scroll, on: window, do: fadeInUp animated, before: scrollReveal">
    <nav class="container main-nav clearfix">
        <div class="main-nav-title pull-left">
            <a class="blog-title" href="{{@blog.url}}">{{@blog.title}}</a>
        </div>
        {{#if @blog.navigation}}
            {{navigation}}
        {{/if}}
    </nav>
</header>
{{! The main container area on the homepage }}
<main id="container" class="container" role="main" data-anijs="if: scroll, on: window, do: fadeInUp animated, before: scrollReveal">
    <div id="content" class="content col-sm-12 col-md-12 col-lg-12">
      <article class="{{post_class}}">
          <header class="post-header">
              <h1 class="post-title">{{title}}</h1>
          </header>
          <section class="post-content" data-anijs="if: scroll, on: window, do: fadeInUp animated, before: scrollReveal">
              {{content}}
          </section>
          <footer class="post-footer">
              {{> "post_author"}}
          </footer>
      </article>
</main>
{{/post}}
